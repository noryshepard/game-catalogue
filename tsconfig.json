{
  "compilerOptions": {
    "outDir": "dist",        // <- ensure JS goes to 'dist'
    "noEmit": false,         // <- allow emit
    "allowJs": false,        // <- prevent compiling JS files inside src
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"]       // optional, explicitly include Node types
  },
  "include": ["src"]
}
